<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categorias</title>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <main class="max-w-7xl mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-6">Categorias Disponíveis</h1>

    @if (session.has('success'))
      <div class="bg-green-500 text-white p-4 rounded-lg mb-4">
        {{ session.get('success') }}
      </div>
    @endif

    @if (session.has('error'))
      <div class="bg-red-500 text-white p-4 rounded-lg mb-4">
        {{ session.get('error') }}
      </div>
    @endif

    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead>
        <tr>
          <th class="px-4 py-2 border-b text-left">ID</th>
          <th class="px-4 py-2 border-b text-left">Nome</th>
          <th class="px-4 py-2 border-b text-left">Ações</th>
        </tr>
      </thead>
      
      <tbody>
        @forelse (categories as category)
          @if (category && category.id && category.name)
            <tr>
              <td class="px-4 py-2 border-b">{{ category.id }}</td>
              <td class="px-4 py-2 border-b">{{ category.name }}</td>
              <td class="px-4 py-2 border-b">
                <a href="{{ route('categories.show', category.id) }}" class="text-blue-500 hover:text-blue-600">Ver</a>
              </td>
            </tr>
          @else
            <tr>
              <td colspan="3" class="px-4 py-2 border-b text-center text-red-500">Categoria com dados inválidos</td>
            </tr>
          @endif
        @empty
          <tr>
            <td colspan="3" class="px-4 py-2 border-b text-center text-red-500">Nenhuma categoria encontrada.</td>
          </tr>
        @endforelse
      </tbody>

    </table>
  </main>
</body>
</html>
