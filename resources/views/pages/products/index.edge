<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Loja de RPG</title>
    @vite(['resources/js/app.js', 'resources/css/app.css'])
    <script src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>
</head>
@layouts.app()
<body class="bg-gray-100">
    <main class="max-w-7xl mx-auto px-4 py-6">
        
        <!-- Barra de Busca -->
        <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Encontre o que procura</h2>
            <div class="relative">
                <input type="text" placeholder="Buscar produtos..." class="w-full p-4 border rounded-lg focus:ring-2 focus:ring-blue-500">
                <button class="absolute right-2 top-2 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    <span class="iconify" data-icon="mdi-magnify"></span>
                </button>
            </div>
        </section>

        <!-- Produtos -->
        <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Produtos</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
                @each(product in products)
                  <div class="w-full lg:w-1/3 px-3">
                    <div class="product-card">
                      <img src="{{ product.imageUrl || '/default-image.jpg' }}" alt="{{ product.name }}" class="product-image">
                      <h3 class="product-name">{{ product.name }}</h3>
                      <p class="product-price">${{ product.price.toFixed(2) }}</p>
                      <p class="product-description">{{ product.description }}</p>
                    </div>
                  </div>
                @endeach

                    
               
            </div>
        </section>

       
        </section>
    </main>
</body>
@end
